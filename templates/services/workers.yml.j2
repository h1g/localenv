image: "{{ cli_image + '_' + project + '_' + repo_name }}"
{% if os_name == 'linux' %}
extra_hosts:
  - "host.docker.internal:{{ lookup('env','LE_NET_GW') }}"
{% endif %}
volumes:
  - '{{ source_dir }}:/var/www'
{% if configs %}
  - {{ config_dir }}:{{ config_dir }}
{% endif %}
{% if  cache_dir is defined %}
  - {{ cache_dir }}
{% endif %}
command: ["/usr/bin/supervisord", "-c", "/etc/supervisor/supervisord.conf"]
depends_on:
  - {{ project_name }}-cli
