parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
export PS1="\u@\h \[\e[32m\]\w \[\e[91m\]\$(parse_git_branch)\[\e[00m\]$ "
{% if tech in ['ruby','md'] %}
export GEM_HOME="{{ home_dir }}/.gem"
export GEM_PATH="{{ home_dir }}/.gem"
export PATH="{{ home_dir }}/.gem/bin:$PATH"
{% endif %}